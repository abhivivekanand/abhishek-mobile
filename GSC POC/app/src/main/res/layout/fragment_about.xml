<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Copyuright"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="-6dp"
            android:text="You have added below dates as your Favourite"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/fav_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Copyuright"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="-6dp"
            android:text="2022-01-01"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold" />


        <TextView
            android:id="@+id/Copyuright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:text="Your Favourite Pictures"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="italic|bold" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>